<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message|%>
      <li> <%= message %> </li>
      <% end %>
    </ul>
  <% end %>
  <select name="post[user_id]">
    <% User.all.each do |user| %>
      <option value= <%= user.id%> >  <%= user.name %> </option>     
    <% end %>
  </select>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
