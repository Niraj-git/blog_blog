= form_for(@post) do |f|
  - if @post.errors.any?
    %h2 Errors:
    %ul
      - @post.errors.full_messages.each do |message|
        %li
          = message
  %select{:name => "post[user_id]"}
    - User.all.each do |user|
      %option{:value => "<haml_loud"}
        user.id &gt;  #{user.name}
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :text
    %br/
    = f.text_area :text
  .actions
    = f.submit
